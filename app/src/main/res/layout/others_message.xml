<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="60dp"
    android:id="@+id/others_message"
    android:clipToPadding="false">

    <View
        android:id="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:background="@drawable/circle"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/others_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-1dp"
        android:layout_marginStart="50dp"
        android:paddingBottom="4dp"
        android:text="Rose" />

    <TextView
        android:id="@+id/others_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/avatar"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="3dp"
        android:background="@drawable/others_message"
        android:elevation="2dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textSize="18dp" />

    <TextView
        android:id="@+id/others_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/others_message_body"
        android:layout_below="@+id/others_message_body"
        android:text="2018-07-19 13:30 發送"
        android:textSize="12dp"
        />
</RelativeLayout>